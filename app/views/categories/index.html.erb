<!-- app/views/categories/index.html.erb -->
<div class="categories-index">
  <h1 class="categories-index-h1">My Tasks</h1>

  <% if @categories.any? %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th class="action">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.name, category %></td>
            <td class="action">
              <%= link_to 'Show', category %>
              <%= link_to 'Edit', edit_category_path(category) %>
              <%= button_to 'Delete', category, method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>You have no category created.</p>
  <% end %>

  <br>
  <br>
  <div class="view-task-new-category-div">
    <%= link_to 'View All Tasks', show_joined_table_categories_path, method: :get, class: "view-task-new-category" %>
    <%= link_to 'New Category', new_category_path, class: "view-task-new-category"  %>
  </div>
  <br>
</div>
