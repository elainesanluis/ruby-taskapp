<!-- app/views/categories/index.html.erb -->

<div class="categories-index-div">
  <h1 class="categories-index-h1">My Tasks</h1>
  <div class="view-task-new-category-div">
    <%= link_to 'View All Tasks', show_joined_table_categories_path, method: :get, class: "view-task-new-category" %>
    <%= link_to 'Add Category', new_category_path, class: "view-task-new-category"  %>
  </div>
  <br/>
  <div class="categories-index">
    <div class="categories-name-div">
      <% if @categories.any? %>
        <div class="categories-row">
          <% @categories.each do |category| %>
            <div class="category-item">
            <table >
            <tbody class="category-actions-div">
              <tr>
                <td><%= link_to category.name, category,class: "category-name" %></td>
              </tr>
              <tr class="category-actions">
                <td ><%= link_to 'Edit', edit_category_path(category), class: "category-actions-link" %></td>
                <td ><%= button_to 'Delete', category, method: :delete, class: "category-actions-link" %></td>
              </tr>
            </tbody>
          </table>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="no-category">Please add a category.</p>
      <% end %>
    </div>
  </div>
  <br>
</div>
