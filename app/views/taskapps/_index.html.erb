<!-- app/views/taskapps/_index.html.erb -->
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Due Date</th>
      <th class="action">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @taskapps.each do |taskapp| %>
      <tr>
        <td><%= taskapp.title %></td>
        <td><%= taskapp.status %></td>
        <td><%= taskapp.due_date %></td>
        <td class="action">
          <%= link_to 'Show', category_taskapp_path(@category, taskapp) %>
          <%= link_to 'Edit', edit_category_taskapp_path(@category, taskapp) %>
          <%= button_to 'Delete', category_taskapp_path(@category, taskapp), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
